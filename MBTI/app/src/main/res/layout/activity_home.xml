<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home">

    <!-- 홈화면이다. 굳이 넣을 필요가 있나 생각도 됐지만 이게 없고
     매칭 화면만 있으면 밋밋할 것 같아 일단 넣어뒀다. -->


    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"
        app:title="홈"
        app:titleTextColor="#FFFFFF" />

    <TextView
        android:id="@+id/whats_my_mbti"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="53dp"
        android:layout_marginTop="76dp"
        android:text="나의 MBTI는?"
        android:textAlignment="center"
        android:textSize="35sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/user_mbti_imageview"
        android:layout_width="300dp"
        android:layout_height="250dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="144dp"
        android:src="@drawable/mbti_before_selection" />

    <Button
        android:id="@+id/profile_edit_home_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="400dp"
        android:background="@drawable/border"
        android:onClick="goProfileEditActivity"
        android:text="프로필 수정"
        android:textSize="15dp"
        android:textStyle="bold"></Button>

    <Button
        android:id="@+id/request_home_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="115dp"
        android:layout_marginTop="400dp"
        android:background="@drawable/border"
        android:onClick="goRequestActivity"
        android:text="요청보관함"
        android:textSize="15dp"
        android:textStyle="bold"></Button>

    <Button
        android:id="@+id/response_home_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="215dp"
        android:layout_marginTop="400dp"
        android:background="@drawable/border"
        android:onClick="goResponseActivity"
        android:text="받은 요청"
        android:textSize="15dp"
        android:textStyle="bold"></Button>

    <Button
        android:id="@+id/deny_home_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="315dp"
        android:layout_marginTop="400dp"
        android:background="@drawable/border"
        android:onClick="goDenyActivity"
        android:text="차단프로필"
        android:textSize="15dp"
        android:textStyle="bold"></Button>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="61dp">

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/infj"
                    android:layout_width="70dp"
                    android:layout_height="100dp"
                    android:src="@drawable/mbti_infj" />

                <ImageView
                    android:id="@+id/infp"
                    android:layout_width="70dp"
                    android:layout_height="100dp"
                    android:src="@drawable/mbti_infp" />

                <ImageView
                    android:id="@+id/enfj"
                    android:layout_width="70dp"
                    android:layout_height="100dp"
                    android:src="@drawable/mbti_enfj" />

                <ImageView
                    android:id="@+id/enfp"
                    android:layout_width="70dp"
                    android:layout_height="100dp"
                    android:src="@drawable/mbti_enfp" />

                <ImageView
                    android:id="@+id/isfj"
                    android:layout_width="70dp"
                    android:layout_height="100dp"
                    android:src="@drawable/mbti_isfj" />

                <ImageView
                    android:id="@+id/istj"
                    android:layout_width="70dp"
                    android:layout_height="100dp"
                    android:src="@drawable/mbti_istj" />

                <ImageView
                    android:id="@+id/estj"
                    android:layout_width="70dp"
                    android:layout_height="100dp"
                    android:src="@drawable/mbti_estj" />

                <ImageView
                    android:id="@+id/esfj"
                    android:layout_width="70dp"
                    android:layout_height="100dp"
                    android:src="@drawable/mbti_esfj" />

                <ImageView
                    android:id="@+id/istp"
                    android:layout_width="70dp"
                    android:layout_height="100dp"
                    android:src="@drawable/mbti_istp" />

                <ImageView
                    android:id="@+id/estp"
                    android:layout_width="70dp"
                    android:layout_height="100dp"
                    android:src="@drawable/mbti_estp" />

                <ImageView
                    android:id="@+id/isfp"
                    android:layout_width="70dp"
                    android:layout_height="100dp"
                    android:src="@drawable/mbti_isfp" />

                <ImageView
                    android:id="@+id/esfp"
                    android:layout_width="70dp"
                    android:layout_height="100dp"
                    android:src="@drawable/mbti_esfp" />

                <ImageView
                    android:id="@+id/entj"
                    android:layout_width="70dp"
                    android:layout_height="100dp"
                    android:src="@drawable/mbti_entj" />

                <ImageView
                    android:id="@+id/intp"
                    android:layout_width="70dp"
                    android:layout_height="100dp"
                    android:src="@drawable/mbti_intp" />

                <ImageView
                    android:id="@+id/intj"
                    android:layout_width="70dp"
                    android:layout_height="100dp"
                    android:src="@drawable/mbti_intj" />
                <ImageView
                    android:id="@+id/entp"
                    android:layout_width="70dp"
                    android:layout_height="100dp"
                    android:src="@drawable/mbti_entp"/>

            </LinearLayout>
        </HorizontalScrollView>

    </ScrollView>


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bottom_navigation"
        app:itemBackground="@color/colorPrimary"
        app:itemTextColor="@drawable/selector"
        app:itemIconTint="@drawable/selector"
        app:menu="@menu/menu"
        android:layout_alignParentBottom="true" />

</RelativeLayout>